<div class="container">
  <form
    class="form-inline mt-5 mt-md-3"
    id="searchZip"
    method="POST"
    action="/search"
  >
    <div class="form-row">
      <div class="form-group col-md-12">
        <input
          class="form-control mr-sm-2"
          type="text"
          placeholder="Search by city"
          aria-label="Zip Code"
          id="citySearch"
          name="citySearch"
          value="{{citySearch}}"
        />

        <input
          class="form-control mr-sm-2"
          type="text"
          placeholder="Search by zip code"
          aria-label="Zip Code"
          id="zipSearch"
          name="zipSearch"
          value="{{zipSearch}}"
        />

        <input
          class="form-control mr-sm-2"
          type="text"
          placeholder="Search by state"
          aria-label="Zip Code"
          id="stateSearch"
          name="stateSearch"
          value="{{stateSearch}}"
        />

        <button
          class="btn btn-outline-success my-2 my-sm-0"
          type="submit"
          id="btnMainSearch"
        >Search</button>
      </div>
    </div>
  </form>

  {{#if hasErrors}}
    <div class="alert alert-danger error" role="alert">
      {{error}}
    </div>
  {{/if}}
</div>

{{#if listingsData}}
  <div class="row">

    {{#each listingsData}}
      <div class="col-sm-4">
        <div class="card">
          <img src={{parkingImg}} class="card-img-top" alt="Parking Image" />
          <div class="card-body">
            <h5 class="card-title">{{address}}</h5>
            <p class="card-text">{{zip}}</p>
            <a href="#" class="btn btn-primary">Go Here</a>
            <input
              type="hidden"
              id="listingId"
              name="listingId"
              value={{_id}}
            />
          </div>
        </div>
      </div>

    {{/each}}
  </div>

{{/if}}